{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "affinity": {
            "type": "object"
        },
        "dockerSock": {
            "type": "object",
            "properties": {
                "mount": {
                    "type": "boolean"
                },
                "path": {
                    "type": "string"
                }
            }
        },
        "extraEnvironmentVars": {
            "type": "object"
        },
        "extraSecretEnvironmentVars": {
            "type": "array"
        },
        "image": {
            "type": "object",
            "properties": {
                "pullPolicy": {
                    "type": "string"
                },
                "repository": {
                    "type": "string"
                },
                "tag": {
                    "type": "string"
                }
            }
        },
        "imageCredentials": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                }
            }
        },
        "livenessProbe": {
            "type": "object"
        },
        "logLevel": {
            "type": "string"
        },
        "nodeSelector": {
            "type": "object"
        },
        "password": {
            "type": "string"
        },
        "rbac": {
            "type": "object",
            "properties": {
                "enabled": {
                    "type": "boolean"
                },
                "roleRef": {
                    "type": "string"
                }
            }
        },
        "readinessProbe": {
            "type": "object"
        },
        "replicaCount": {
            "type": "integer"
        },
        "repositoryUriPrefix": {
            "type": "string"
        },
        "resources": {
            "type": "object"
        },
        "securityContext": {
            "type": "object"
        },
        "server": {
            "type": "object",
            "properties": {
                "port": {
                    "type": "integer"
                },
                "serviceName": {
                    "type": "string"
                }
            }
        },
        "serviceAccount": {
            "type": "string"
        },
        "tolerations": {
            "type": "array"
        },
        "user": {
            "type": "string"
        },
        "userCredentials": {
            "type": "object",
            "properties": {
                "enable": {
                    "type": "boolean"
                },
                "passwordKey": {
                    "type": "string"
                },
                "secretName": {
                    "type": "string"
                },
                "userKey": {
                    "type": "string"
                }
            }
        }
    }
}
