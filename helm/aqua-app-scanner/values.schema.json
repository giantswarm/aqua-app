{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "affinity": {
            "type": "object"
        },
        "image": {
            "type": "object",
            "properties": {
                "pullPolicy": {
                    "type": "string"
                },
                "repository": {
                    "type": "string"
                },
                "tag": {
                    "type": "string"
                }
            }
        },
        "imageCredentials": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "repositoryUriPrefix": {
                    "type": "string"
                }
            }
        },
        "livenessProbe": {
            "type": "object"
        },
        "nodeSelector": {
            "type": "object"
        },
        "password": {
            "type": ["null", "string"]
        },
        "passwordKey": {
            "type": ["null", "string"]
        },
        "rbac": {
            "type": "object",
            "properties": {
