            "type": "object"
        },
        "secretName": {
            "type": ["null", "string"]
        },
        "server": {
            "type": "object",
            "properties": {
                "port": {
                    "type": "integer"
                },
                "serviceName": {
                    "type": "string"
                }
            }
        },
        "serviceAccount": {
            "type": "string"
        },
        "tolerations": {
            "type": "array"
