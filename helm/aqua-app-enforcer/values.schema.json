{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "enforcerLogicalName": {
            "type": ["null", "string"]
        },
        "enforcerToken": {
            "type": "string"
        },
        "enforcerTokenSecretKey": {
            "type": ["null", "string"]
        },
        "enforcerTokenSecretName": {
            "type": ["null", "string"]
        },
        "envoy": {
            "type": "object",
            "properties": {
                "configMap": {
                    "type": ["null", "string"]
                },
                "enabled": {
                    "type": "boolean"
                }
            }
        },
        "extraEnvironmentVars": {
            "type": "object"
        },
        "extraSecretEnvironmentVars": {
            "type": "array"
        },
        "gate": {
            "type": "object",
            "properties": {
                "host": {
                    "type": "string"
                },
                "port": {
                    "type": "integer"
                }
            }
        },
        "hostRunPath": {
            "type": ["null", "string"]
        },
        "image": {
            "type": "object",
            "properties": {
                "pullPolicy": {
                    "type": "string"
                },
                "repository": {
                    "type": "string"
                },
                "tag": {
                    "type": "string"
                }
            }
        },
        "imageCredentials": {
            "type": "object",
            "properties": {
                "create": {
                    "type": "boolean"
                },
                "name": {
                    "type": ["null", "string"]
                },
                "password": {
                    "type": "string"
                },
                "registry": {
                    "type": ["null", "string"]
                },
                "repositoryUriPrefix": {
                    "type": ["null", "string"]
                },
                "username": {
                    "type": "string"
                }
            }
        },
        "livenessProbe": {
            "type": "object"
        },
        "logLevel": {
            "type": ["null", "string"]
        },
        "nodeSelector": {
            "type": "object"
        },
        "rbac": {
            "type": "object",
            "properties": {
                "enabled": {
                    "type": "boolean"
                },
                "roleRef": {
                    "type": ["null", "string"]
                }
            }
        },
        "readinessProbe": {
            "type": "object"
        },
        "resources": {
            "type": "object"
        },
        "securityContext": {
            "type": "object",
            "properties": {
                "privileged": {
                    "type": "boolean"
                }
            }
        },
        "tolerations": {
            "type": "array"
        }
    }
}
